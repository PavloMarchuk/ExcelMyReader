<Window x:Class="ExcelMyReaderWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExcelMyReaderWpf"
        mc:Ignorable="d"
        Title="ExelToDBReader" Height="550" Width="825">
	<Grid >
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>
		
		<Grid.Background>
				<ImageBrush ImageSource="img\fon.jpeg"></ImageBrush>
		</Grid.Background>

		<WrapPanel>
			<ComboBox Name="cbTypes" Width="170" Margin="10" DataContext="StaticResource paramListWPF"> 			
			</ComboBox>
			<Button   Margin="10" Click="Button_Click">UpLoad table</Button>
			<Button Margin="10">Add new table type</Button>			
		</WrapPanel >
		<WrapPanel Grid.Row="1">
			<DataGrid Name="dgv" Margin="10" Height="300" Width="400"/>
		</WrapPanel>
		<Label Grid.Row="2" Name="tmpLabel" Content="">
			
		</Label>

		<TextBlock Grid.Row="3">TextBlock</TextBlock>
		<TextBox Grid.Row="4">TextBox</TextBox>


	</Grid>
</Window>
